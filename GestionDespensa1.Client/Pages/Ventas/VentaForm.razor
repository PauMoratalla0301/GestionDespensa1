            // Aplicar mismo redondeo para actualización
            venta.Total = Math.Round(venta.Total, 2);
            venta.MontoPagado = Math.Round(venta.MontoPagado, 2);
            venta.SaldoPendiente = Math.Round(venta.SaldoPendiente, 2);
